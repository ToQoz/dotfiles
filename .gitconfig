[user]
	name = Takatoshi Matsumoto
	email = toqoz403@gmail.com
[github]
	user = "ToQoz"
[core]
	attributesfile = ~/.gitattributes_global
	excludesfile = ~/.gitignore_global
	autocrlf = input
	quotepath = false
	precomposeunicode = true
	ignorecase = false
[init]
	templatedir = ~/.git_template
[push]
	default = simple
[rebase]
	autosquash = true
[grep]
	lineNumber = true
[diff]
	algorithm = histogram
[merge]
	tool = vimdiff
[alias]
	ls-aliases = "!sh -c 'git config -l | grep ^alias'"
	bootstrap  = "!sh -c 'git init && git commit --allow-empty'"
	unstage    = "reset HEAD --"
	# http://qiita.com/uasi/items/f19a120e012c0c75d856
	uncommit   = reset HEAD^
	recommit   = commit -c ORIG_HEAD
	cancel     = "!git commit -a -m 'Temporary commit for cancel' && git reset --hard HEAD~" # http://d.hatena.ne.jp/thinca/20120924/1348491052
	yesterday  = "!f() { git log $1@{yesterday}..$1; }; f"
	rank       = shortlog -s -n --no-merges
	delete-merged-branches = !git branch --merged | grep -v \\* | xargs -I % git branch -d %
	ls-modified = "!git status -s | grep '^ M ' | awk '{print $2}'"
	gr  = grep --untracked
	s   = !"git stash list && git status -sb"
	ft  = fetch
	ftp = fetch --prune
	fto = fetch origin
	co  = checkout
	ci  = commit -v
	br  = branch
	wc  = whatchanged
	lp  = log --decorate --stat --patch
	dw  = diff --color-words
	toqoz = "!git config --add user.name 'Takatoshi Matsumoto' && git config --add user.email 'toqoz403@gmail.com'"
[sendemail]
	smtpserver = msmtp
	smtpencryption = tls
	smtpserver     = smtp.gmail.com
	smtpuser       = toqoz403@gmail.com
	smtpserverport = 587
[url "git@github.com:"]
	pushInsteadOf = "git://github.com/"
	pushInsteadOf = "https://github.com/"
[url "git@github.com:"]
	insteadOf     = "https://github.com/"
[url "git@bitbucket.org:"]
	pushInsteadOf = "git://bitbucket.org/"
	pushInsteadOf = "https://bitbucket.org/"
[url "git@bitbucket.org:"]
	insteadOf = "https://bitbucket.org/"
[include]
	path = ~/private/.gitconfig
[ghq]
	root = ~/_dev
	root = ~/_go/src
